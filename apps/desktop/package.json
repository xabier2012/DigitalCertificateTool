{
  "name": "@cert-manager/desktop",
  "version": "1.0.0",
  "description": "Certificate Manager Tool - Aplicación de escritorio",
  "author": "Certificate Manager Team",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer && electron-builder",
    "preview": "vite preview",
    "electron:dev": "npm run build:main && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:main && npm run build:renderer && electron-builder",
    "package": "npm run build:main && npm run build:renderer && electron-builder --win"
  },
  "dependencies": {
    "@cert-manager/core": "1.0.0",
    "@cert-manager/shared": "1.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.18",
    "@mui/material": "^5.14.18",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.3.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.certmanager.tool",
    "productName": "Certificate Manager Tool",
    "copyright": "Copyright © 2024",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [],
    "asar": true,
    "compression": "maximum",
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Certificate Manager"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons",
      "category": "Development",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "maintainer": "Certificate Manager Team"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-linux.${ext}"
    }
  }
}
